<%= form_tag change_language_submit_system_languages_path, :method => "post", :class => "form-horizontal" do %>
<div class="form-group">
  <div class="col-sm-10">
    <%= select_tag(:language_id, options_from_collection_for_select(@system_languages, 'id', 'name'), :prompt => "#{t 'prompt'} #{t 'language.language'}", :class => "form-control") %>
  </div>
  <div class="col-sm-2">
    <%= submit_tag "#{t 'process'}", :disable_with => "#{t 'disable_with'}", :class => "btn btn-success" %>
  </div>
</div>
<% end %>