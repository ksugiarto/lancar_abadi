<%= form_for(@supplier, :html => { :class => "form-horizontal" }, :remote => true) do |f| %>
  <% if @supplier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>

      <ul>
      <% @supplier.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name, :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :name, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :join_date, :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :join_date, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :notes, :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_area :notes, :rows => 3, :class => "form-control" %></div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :address, :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :address, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :country, :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.select(:country_id, @countries.collect {|country| [country.name, country.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.country'}"}, {:class => "form-control"}) %></div>
      </div>
      <div class="form-group">
        <%= f.label :province, :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.select(:province_id, @provinces.collect {|province| [province.name, province.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.province'}"}, :class => "form-control") %></div>
      </div>
      <div class="form-group">
        <%= f.label :city, :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.select(:city_id, @cities.collect {|city| [city.name, city.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.city'}"}, :class => "form-control") %></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <%= f.submit "#{t 'submit'}", :class => "btn btn-success btn-block" %>
    </div>
    <div class="col-md-3"></div>
  </div>

<% end %>
