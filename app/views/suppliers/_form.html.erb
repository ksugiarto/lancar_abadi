<%= form_for(@supplier, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @supplier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>

      <ul>
      <% @supplier.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :supplier_code, "#{t 'supplier.supplier_code'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :supplier_code, :class => "form-control", :required => true %></div>
      </div>
      <div class="form-group">
        <%= f.label :name, "#{t 'supplier.name'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :name, :class => "form-control", :required => true %></div>
      </div>
      <div class="form-group">
        <%= f.label :contact_person, "#{t 'supplier.contact_person'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :contact_person, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :email, "#{t 'supplier.email'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :email, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :notes, "#{t 'supplier.notes'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_area :notes, :rows => 2, :class => "form-control" %></div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :join_date, "#{t 'supplier.join_date'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :join_date, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :address, "#{t 'supplier.address'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :address, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :country, "#{t 'supplier.country'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.select(:country_id, @countries.collect {|country| [country.name, country.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.country'}"}, {:class => "form-control"}) %></div>
      </div>
      <div class="form-group">
        <%= f.label :province, "#{t 'supplier.province'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.select(:province_id, @provinces.collect {|province| [province.name, province.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.province'}"}, :class => "form-control") %></div>
      </div>
      <div class="form-group">
        <%= f.label :city, "#{t 'supplier.city'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.select(:city_id, @cities.collect {|city| [city.name, city.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.city'}"}, :class => "form-control") %></div>
      </div>
      <div class="form-group">
        <div class="col-sm-3"></div>
        <div class="col-sm-8"><%= f.submit "#{t 'submit'}", :class => "btn btn-success btn-block", :disable_with => "#{t 'disable_with'}" %></div>
      </div>
    </div>
  </div>
<% end %>