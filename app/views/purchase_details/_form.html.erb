<%= form_for([@purchase, @purchase_detail], :html => { :class => "form-horizontal" }, :remote => true) do |f| %>
  <% if @purchase_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@purchase_detail.errors.count, "error") %> prohibited this purchase_detail from being saved:</h2>

      <ul>
      <% @purchase_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :product, "#{t 'purchase.detail.product'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.select(:product_id, @products.collect {|product| ["#{product.name} #{product.product_type}-#{product.merk} (#{product.barcode_id})", product.id,]}, {:prompt => "#{t 'prompt'} #{t 'purchase.detail.product'}"}, :class => "form-control") %></div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, "#{t 'purchase.detail.quantity'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :quantity, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :price, "#{t 'purchase.detail.price'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :price, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :discount, "#{t 'purchase.detail.discount'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :discount, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :added_discount, "#{t 'purchase.detail.added_discount'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :added_discount, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-4"></div>
    <div class="col-sm-6"><%= f.submit "#{t 'submit'}", :class => "btn btn-success btn-block", :disable_with => "#{t 'disable_with'}" %></div>
  </div>
<% end %>
