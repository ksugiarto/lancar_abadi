<%= form_for(@customer, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name, "#{t 'customer.name'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :name, :required => true, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :contact_person, "#{t 'customer.contact_person'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :contact_person, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :email, "#{t 'customer.email'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :email, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :join_date, "#{t 'customer.join_date'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :join_date, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :notes, "#{t 'customer.notes'}", :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_area :notes, :rows => 2, :class => "form-control" %></div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :address, :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.text_field :address, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :country, :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.select(:country_id, @countries.collect {|country| [country.name, country.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.country'}"}, {:class => "form-control"}) %></div>
      </div>
      <div class="form-group">
        <%= f.label :province, :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.select(:province_id, @provinces.collect {|province| [province.name, province.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.province'}"}, :class => "form-control") %></div>
      </div>
      <div class="form-group">
        <%= f.label :city, :class => "col-sm-3 control-label" %>
        <div class="col-sm-8"><%= f.select(:city_id, @cities.collect {|city| [city.name, city.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.city'}"}, :class => "form-control") %></div>
      </div>
      <div class="form-group">
        <div class="col-sm-3"></div>
        <div class="col-sm-8"><%= f.submit "#{t 'submit'}", :class => "btn btn-success btn-block", :disable_with => "#{t 'disable_with'}" %></div>
      </div>
    </div>
  </div>
<% end %>
