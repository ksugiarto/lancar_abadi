<div id="show" class="row">
  <div class="col-sm-8"></div>

  <div class="col-sm-4">
    <hr>
    <table>
      <tr>
        <th class="text-right" width="200"><%= t 'sale.sub_amount' %>:</th>
        <th width="50">&nbsp;Rp</th>
        <th class="text-right" width="150"><%= precision(@sale.sub_amount) %></th>
        <th width="50">
          <% if @sale.status==0 %>
            <%= link_to edit_footer_sale_path(@sale), :id => "btn", :class => "btn btn-warning btn-xs", :remote => true do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
          <% end -%>
        </th>
      </tr>
      <tr>
        <td class="text-right"><%= "#{t 'sale.discount'} (#{precision(@sale.discount)}%)" %>:</td>
        <td>&nbsp;Rp</td>
        <td class="text-right"><%= precision(@sale.discount_amount) %></td>
        <td></td>
      </tr>
      <tr>
        <th class="text-right"><%= t 'sale.total_amount' %>:</th>
        <th>&nbsp;Rp</th>
        <th class="text-right"><%= precision(@sale.total_amount) %></th>
        <th></th>
      </tr>
    </table>
  </div>
</div>

<!-- SHOWN ON PRINTING ONLY -->
<div id="hidden">
  <table>
    <tr>
      <td></td>
      <td colspan="3"><hr></td>
    </tr>
    <tr>
      <td width="400">&nbsp;</td>
      <td class="text-right"><%= t 'sale.sub_amount' %>:</td>
      <td>Rp</td>
      <td class="text-right" width="170"><%= precision(@sale.sub_amount) %></td>
    </tr>
    <tr>
      <td></td>
      <td class="text-right"><%= "#{t 'sale.discount'} (#{precision(@sale.discount)}%)" %>:</td>
      <td>Rp</td>
      <td class="text-right"><%= precision(@sale.discount_amount) %></td>
    </tr>
    <tr>
      <td></td>
      <td class="text-right"><%= t 'sale.total_amount' %>:</td>
      <td>Rp</td>
      <td class="text-right"><%= precision(@sale.total_amount) %></td>
    </tr>
  </table>
</div>
