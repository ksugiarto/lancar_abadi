<div class="row">
  <div class="col-md-2">
    <%= link_to sales_path, :class => "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;<%= t 'back' %>
    <% end %>
  </div>
  
  <div class="col-md-8">
    <h4 align="center"><%= t 'sale.sale' %> - <%= t 'new' %></h4>
  </div>

  <div class="col-md-2" align="right">
  </div>
</div>
<hr>

<div class="row">
  <div class="col-md-6">
    <%= render 'form' %>
  </div>

  <div class="col-md-6">
    <div id="customer_filter" style="display:none;">
      <%= form_tag(search_customer_sales_path, :html => { :class => "form-horizontal" }, :remote => true) do %>
        <div class="form-group">
          <div class="col-sm-10"><%= text_field_tag :keyword, nil, :placeholder => "#{t 'sale.search_customer_placeholder'}", :class => "form-control" %></div>
          <div class="col-sm-2"><%= submit_tag "#{t 'search'}", :class => "btn btn-success btn-block", :disable_with => "#{t 'disable_with'}" %></div>
        </div>
      <% end -%>
    </div>

    <div id="customer_list">
    </div>
  </div>
</div>