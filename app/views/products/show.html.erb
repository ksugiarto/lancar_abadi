<div class="row">
  <div class="col-md-2">
    <%= link_to products_path, :class => "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;<%= t 'back' %>
    <% end %>
  </div>
  
  <div class="col-md-8">
    <h4 align="center"><%= t 'product.product' %> - <%= t 'detail' %></h4>
  </div>

  <div class="col-md-2" align="right">
    <%= link_to @product, method: :delete, data: { confirm: "#{t 'confirm'}" }, :class => "btn btn-danger btn-sm", :remote => true do %>
      <%= t 'destroy' %>&nbsp;<span class="glyphicon glyphicon-remove"></span>
    <% end -%>

    <%= link_to edit_product_path(@product), :class => "btn btn-warning btn-sm", :remote => true do %>
      <%= t 'edit' %>&nbsp;<span class="glyphicon glyphicon-pencil"></span>
    <% end %>
  </div>
</div>

<%= render 'show' %>

<!-- Nav tabs -->
<ul class="nav nav-tabs">
  <li class="active"><a href="#purchase" data-toggle="tab"><%= t 'product.purchase.purchase' %></a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="purchase"><%= render 'product_purchases/table' %></div>
</div>

<div id="modal"></div>

