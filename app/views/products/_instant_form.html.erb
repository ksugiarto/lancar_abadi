<%= form_tag instant_create_products_path, :method => "post", :class => "form-horizontal", :remote => true do %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label :product, :category, "#{t 'product.category'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= select(:product, :category_id, @categories.collect {|category| [category.name, category.id,]}, {:prompt => "#{t 'prompt'} #{t 'category.category'}"}, {:class => "form-control"}) %></div>
  </div>
  <div class="form-group">
    <%= label :product, :special_price, "#{t 'product.special_price'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= select(:product, :special_price_id, @special_prices.collect {|special_price| [special_price.description, special_price.id,]}, {:prompt => "#{t 'prompt'} #{t 'special_price.special_price'}"}, {:class => "form-control"}) %></div>
  </div>
  <div class="form-group">
    <%= label :product, :barcode_id, "#{t 'product.barcode_id'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= text_field :product, :barcode_id, :placeholder => "#{t 'product.barcode_id_placeholder'}", :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= label :product, :supplier_id, "#{t 'product.supplier'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= select(:product,:supplier_id, @suppliers.collect {|supplier| [supplier.name, supplier.id,]}, {:prompt => "#{t 'prompt'} #{t 'product.supplier'}"}, {:class => "form-control"}) %></div>
  </div>
  <div class="form-group">
    <%= label :product, :name, "#{t 'product.name'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= text_field :product, :name, :required => true, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= label :product, :product_type, "#{t 'product.product_type'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= text_field :product, :product_type, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= label :product, :merk, "#{t 'product.merk'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= text_field :product, :merk, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= label :product, :size, "#{t 'product.size'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= text_field :product, :size, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= label :product, :unit_of_measure, "#{t 'product.unit_of_measure'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= select(:product,:unit_of_measure_id, @unit_of_measures.collect {|unit_of_measure| [unit_of_measure.name, unit_of_measure.id,]}, {:prompt => "#{t 'prompt'} #{t 'product.unit_of_measure'}"}, {:class => "form-control"}) %></div>
  </div>
  <div class="form-group">
    <%= label :product, :sales_price, "#{t 'product.sales_price'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= text_field :product, :sales_price, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-4"></div>
    <div class="col-sm-6">
      <%= hidden_field_tag :sale_id, @sale.id %>
      <%= submit_tag "#{t 'submit'}", :class => "btn btn-success", :disable_with => "#{t 'disable_with'}" %>
    </div>
  </div>
<% end %>
