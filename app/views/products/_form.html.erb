<%= form_for(@product, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :category, "#{t 'product.category'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.select(:category_id, @categories.collect {|category| [category.name, category.id,]}, {:prompt => "#{t 'prompt'} #{t 'category.category'}"}, {:class => "form-control"}) %></div>
  </div>
  <div class="form-group">
    <%= f.label :barcode_id, "#{t 'product.barcode_id'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :barcode_id, :placeholder => "#{t 'product.barcode_id_placeholder'}", :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :supplier_id, "#{t 'product.supplier'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.select(:supplier_id, @suppliers.collect {|supplier| [supplier.name, supplier.id,]}, {:prompt => "#{t 'prompt'} #{t 'product.supplier'}"}, {:class => "form-control"}) %></div>
  </div>
  <div class="form-group">
    <%= f.label :name, "#{t 'product.name'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :name, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :product_type, "#{t 'product.product_type'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :product_type, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :merk, "#{t 'product.merk'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :merk, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :size, "#{t 'product.size'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :size, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :unit_of_measure, "#{t 'product.unit_of_measure'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.select(:unit_of_measure_id, @unit_of_measures.collect {|unit_of_measure| [unit_of_measure.name, unit_of_measure.id,]}, {:prompt => "#{t 'prompt'} #{t 'product.unit_of_measure'}"}, {:class => "form-control"}) %></div>
  </div>
  <div class="form-group">
    <%= f.label :sales_price, "#{t 'product.sales_price'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :sales_price, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-4"></div>
    <div class="col-sm-6"><%= f.submit "#{t 'submit'}", :class => "btn btn-success", :disable_with => "#{t 'disable_with'}" %></div>
  </div>
<% end %>
