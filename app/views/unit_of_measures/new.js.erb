$("#modal").dialog({
  autoOpen: true,
  height: 300,
  width: 450,
  modal: true,
  title: "<%= t 'unit.unit' %> - <%= t 'new' %>",
  open: function() {
    $(this).html("<%= escape_javascript(render('form')) %>")
  },
  buttons: {
    "<%= t 'cancel' %>": function() { $(this).dialog("close"); }
  }
});