<%= form_for(@company_profile, :html => { :class => "form-horizontal", :multipart => true }) do |f| %>
  <% if @company_profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company_profile.errors.count, "error") %> prohibited this company_profile from being saved:</h2>

      <ul>
      <% @company_profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name, "#{t 'company.name'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.text_field :name, :required => true, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-6">
          <div class="checkbox">
            <%= f.check_box :is_pkp %><%= f.label :is_pkp, "#{t 'company.is_pkp'}" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :npwp, "#{t 'company.npwp'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.text_field :npwp, :maxlength => "20", :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :telephone, "#{t 'company.telephone'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.text_field :telephone, :required => true, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :fax, "#{t 'company.fax'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.text_field :fax, :class => "form-control" %></div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :address, "#{t 'company.address'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.text_field :address, :required => true, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :country, "#{t 'company.country'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.select(:country_id, @countries.collect {|country| [country.name, country.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.country'}"}, {:class => "form-control"}) %></div>
      </div>
      <div class="form-group">
        <%= f.label :province, "#{t 'company.province'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.select(:province_id, @provinces.collect {|province| [province.name, province.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.province'}"}, :class => "form-control") %></div>
      </div>
      <div class="form-group">
        <%= f.label :city, "#{t 'company.city'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.select(:city_id, @cities.collect {|city| [city.name, city.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.city'}"}, :class => "form-control") %></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h5 align="center">PRIMARY BANK</h5>
      <div class="form-group">
        <%= f.label :primary_bank_name, "#{t 'company.primary_bank_name'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.text_field :primary_bank_name, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :primary_bank_account, "#{t 'company.primary_bank_account'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.text_field :primary_bank_account, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :primary_bank_account_name, "#{t 'company.primary_bank_account_name'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.text_field :primary_bank_account_name, :class => "form-control" %></div>
      </div>
    </div>

    <div class="col-md-6">
      <h5 align="center">SECONDARY BANK</h5>
      <div class="form-group">
        <%= f.label :secondary_bank_name, "#{t 'company.secondary_bank_name'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.text_field :secondary_bank_name, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :secondary_bank_account, "#{t 'company.secondary_bank_account'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.text_field :secondary_bank_account, :class => "form-control" %></div>
      </div>
      <div class="form-group">
        <%= f.label :secondary_bank_account_name, "#{t 'company.secondary_bank_account_name'}", :class => "col-sm-4 control-label" %>
        <div class="col-sm-6"><%= f.text_field :secondary_bank_account_name, :class => "form-control" %></div>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-md-offset-3"><%= f.submit "#{t 'submit'}", :class => "btn btn-success btn-block", :disable_with => "#{t 'disable_with'}" %></div>

<% end %>

<script>
  $(document).ready(function() {
    $('#company_profile_country_id').ajaxSelect('home/provinces_by_country');
    $('#company_profile_province_id').ajaxSelect('home/cities_by_province');
  });
</script>
