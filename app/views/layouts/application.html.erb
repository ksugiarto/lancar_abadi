<!DOCTYPE html>
<html>
<head>
  <title>LancarAbadi</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default" role="navigation">
		<div class="container">
		  <div class="row">
			  <!-- Brand and toggle get grouped for better mobile display -->
			  <div class="navbar-header">
			    <a class="navbar-brand" href="/">
			    	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			    	Lancar Abadi
			    </a>
			  </div>

			  <!-- Collect the nav links, forms, and other content for toggling -->
			  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			    <ul class="nav navbar-nav">
			      <li><a href="/purchases/"><%= t 'purchase.purchase' %></a></li>
			      <li><a href="/sales/"><%= t 'sale.sale' %></a></li>
			      <li><a href="/products/"><%= t 'product.product' %></a></li>
			      <li><a href="/customers/"><%= t 'customer.customer' %></a></li>
			      <li><a href="/suppliers/"><%= t 'supplier.supplier' %></a></li>
			      <li class="dropdown">
		          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span>&nbsp;<%= t 'setting.setting' %> <b class="caret"></b></a>
		          <ul class="dropdown-menu">
					      <li><a href="/customer_groups/"><%= t 'group.group' %></a></li>
					      <li><a href="/categories/"><%= t 'category.category' %></a></li>
					      <li><a href="/unit_of_measures/"><%= t 'unit.unit' %></a></li>
		            <li class="divider"></li>
					      <li><a href="/cities/"><%= t 'city.city' %></a></li>
					      <li><a href="/provinces/"><%= t 'province.province' %></a></li>
					      <li><a href="/countries/"><%= t 'country.country' %></a></li>
		          </ul>
		        </li>
			    </ul>

			  <p class="navbar-text navbar-right">Login as Admin</p>
			  </div><!-- /.navbar-collapse -->
			</div>
		</div>
	</nav>
	
	<div class="container">
	  <div class="row">
	  	<p id="notice"><%= notice %></p>
	  	
		  <%= yield %>
	  </div>
	</div>
</body>
</html>
