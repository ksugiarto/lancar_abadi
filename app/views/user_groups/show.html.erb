<div class="row">
  <div class="col-md-2">
    <%= link_to user_groups_path, :class => "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;<%= t 'back' %>
    <% end %>
  </div>
  
  <div class="col-md-8">
    <h4 align="center"><%= t 'user_group.user_group' %> - <%= t 'user_group.name' %>: <%= @user_group.name %></h4>
  </div>

  <div class="col-md-2" align="right">
    <%= link_to edit_user_group_path(@user_group), :class => "btn btn-sm btn-warning" do %>
      <%= t 'user_group.edit_manage_role' %>&nbsp;<i class="glyphicon glyphicon-pencil"></i>
    <% end %>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-md-6">
    <!-- TABLE MAIN MENU -->
    <table class="table table-condensed">
      <tr>
        <td>
          <div class="label label-default">A</div>&nbsp;
          <%= t 'layout.transaction.transaction' %>
        </td>
      </tr>

      <% @main_menus.each do |menu| %>
        <tr>
          <td>
            <% if menu.visible==true %>
              <label class="checkbox">
                <%= check_box_tag "user_group[user_menu_ids][]", menu.id, @user_group.user_menus.include?(menu), :disabled => true %>
                <%= menu.name %>
              </label>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="col-md-6">
    <!-- TABLE SETTING MENU -->
    <table class="table table-condensed">
      <tr>
        <td>
          <div class="label label-default">B</div>&nbsp;
          <%= t 'layout.setting.setting' %>
        </td>
      </tr>

      <% @setting_menus.each do |menu| %>
        <tr>
          <td>
            <% if menu.visible==true %>
              <label class="checkbox">
                <%= check_box_tag "user_group[user_menu_ids][]", menu.id, @user_group.user_menus.include?(menu), :disabled => true %>
                <%= menu.name %>
              </label>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>